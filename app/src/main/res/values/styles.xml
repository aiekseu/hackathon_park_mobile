<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ApplicationTheme" parent="AppTheme.NoActionBar">
        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">#303030</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="android:fontFamily">@font/franxurter_totally_medium</item>
        <item name="android:typeface">@font/franxurter_totally_medium</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxStrokeColor">#D8D1E7</item>
        <item name="errorEnabled">true</item>
        <item name="materialThemeOverlay">@style/Overlay.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">#303030</item>
        <item name="endIconTint">#845E92</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="android:fontFamily">@font/franxurter_totally_medium</item>
        <item name="android:typeface">@font/franxurter_totally_medium</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxStrokeColor">#D8D1E7</item>
        <item name="errorEnabled">true</item>
        <item name="materialThemeOverlay">
            @style/Overlay.TextInputEditText.OutlinedBox.ExposedDropdownMenu
        </item>
    </style>

    <style name="Overlay.TextInputEditText.OutlinedBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/violetMedium</item>
    </style>

    <style name="Overlay.TextInputEditText.OutlinedBox.ExposedDropdownMenu" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="colorControlActivated">@color/violetMedium</item>
    </style>

</resources>