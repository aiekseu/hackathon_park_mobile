<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fPromos.PromosFragment">

    <ImageButton
        android:id="@+id/promos_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/transparent_round"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="#3A3A3A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/promos_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="Акции"
        android:textColor="@color/violetExtraDark"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="@+id/promos_btn_back"
        app:layout_constraintTop_toBottomOf="@+id/promos_btn_back" />

    <View
        android:id="@+id/promos_firstSeparator"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/violetDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/promos_tv_title" />

    <include
        android:id="@+id/row_promo_1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        layout="@layout/row_promo"
        app:layout_constraintTop_toBottomOf="@+id/promos_firstSeparator"
        />
    <include
        android:id="@+id/row_promo_2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        layout="@layout/row_promo"
        app:layout_constraintTop_toBottomOf="@+id/row_promo_1"
        />
    <include
        android:id="@+id/row_promo_3"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        layout="@layout/row_promo"
        app:layout_constraintTop_toBottomOf="@+id/row_promo_2"
        />
    <include
        android:id="@+id/row_promo_4"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        layout="@layout/row_promo"
        app:layout_constraintTop_toBottomOf="@+id/row_promo_3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>