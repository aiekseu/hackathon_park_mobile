<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fAboutInitiative.AboutInitiativeFragment">

    <ImageButton
        android:id="@+id/initiative_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/transparent_round"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="#3A3A3A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/initiative_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="Мероприятия на октябрь"
        android:textColor="@color/violetExtraDark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/initiative_btn_back"
        app:layout_constraintTop_toBottomOf="@+id/initiative_btn_back" />

    <View
        android:id="@+id/initiative_firstSeparator"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/violetDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/initiative_tv_title" />


    <include
        android:id="@+id/row_vote_element_1"
        layout="@layout/row_vote_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/initiative_firstSeparator" />

    <include
        android:id="@+id/row_vote_element_2"
        layout="@layout/row_vote_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/row_vote_element_1" />

    <include
        android:id="@+id/row_vote_element_3"
        layout="@layout/row_vote_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/row_vote_element_2" />
    <include
        android:id="@+id/row_vote_element_4"
        layout="@layout/row_vote_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/row_vote_element_3" />
    <include
        android:id="@+id/row_vote_element_5"
        layout="@layout/row_vote_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/row_vote_element_4" />
    <include
        android:id="@+id/row_vote_element_6"
        layout="@layout/row_vote_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/row_vote_element_5" />


</androidx.constraintlayout.widget.ConstraintLayout>